{
  "layout" : {
    "type" : "layout",
    "pages" : ["general-page", "preview-page", "hotkey-page"],

    "general-page" : {
      "type" : "page",
      "title" : "General",
      "sections" : ["general-settings", "general-mouse"] 
    },
    "preview-page" : {
      "type" : "page",
      "title" : "Thumbnails",
      "sections" : ["preview-settings", "preview-mouse-section"] 
    },
    "hotkey-page" : {
      "type" : "page",
      "title" : "Hotkeys",
      "sections" : ["hotkey-settings"]
    },

    "general-settings" : {
      "type" : "section",
      "title" : "General launcher settings",
      "keys" : ["allow-dragging", "show-tooltips", "display-number"]
    },
    "general-mouse" : {
      "type" : "section",
      "title" : "Launcher mouse settings",
    "keys" : ["middle-click", "back-click", "forward-click"]
    },

    "preview-settings" : {
      "type" : "section",
      "title" : "Thumbnails menu settings",
      "keys" : ["show-previews", "number-of-unshrunk-previews"]
    },
    "preview-mouse-section" : {
      "type" : "section",
      "title" : "Thumbnails mouse settings",
      "keys" : ["menu-show-on-hover", "preview-timeout-show", "preview-timeout-hide", "menu-show-on-click", "wheel-adjusts-preview-size", "preview-middle-click", "preview-back-click", "preview-forward-click"]
    },

    "hotkey-settings" : {
      "type" : "section",
      "title" : "Hotkey settings",
      "keys" : ["hotkey-bindings", "hotkey-minimize", "hotkey-new", "hotkey-help"]
    }
  },


  "allow-dragging": {
        "type": "switch",
        "default": true,
        "description": "Allow dragging of launchers buttons"
  },
  "show-tooltips": {
    "type": "switch",
    "default": true,
    "description": "Show tooltips for launcher buttons",
    "tooltip": "Enable to show tooltips using window title or application name when hovering over launcher buttons"
  },
  "display-number": {
     "type": "combobox",
     "default": 2,
     "options": {
         "Never": 0,
         "Always": 1,
         "2 or more windows": 2
    },
    "description": "Display number of application windows"
  },
  "middle-click": {
      "type": "combobox",
      "default": 0,
      "options": {
          "Thumbnail menu toggle": 0,
          "Thumbnail menu hold": 1,
          "Close window": 2,
          "Minimize/Restore": 3,
          "Maximize/Restore": 4,
          "Open new window": 5,
          "Move to workspace 1": 6,
          "Move to workspace 2": 7,
          "Move to workspace 3": 8,
          "Move to workspace 4": 9,
          "Visible on this/all workspaces": 10,
          "Do nothing": 99
      },
  "description": "Middle button action"
  },
  "back-click": {
      "type": "combobox",
      "default": 3,
      "options": {
          "Thumbnail menu toggle": 0,
          "Thumbnail menu hold": 1,
          "Close window": 2,
          "Minimize/Restore": 3,
          "Maximize/Restore": 4,
          "Open new window": 5,
          "Move to workspace 1": 6,
          "Move to workspace 2": 7,
          "Move to workspace 3": 8,
          "Move to workspace 4": 9,
          "Visible on this/all workspaces": 10,
          "Do nothing": 99
      },
  "description": "Back button action"
  },
  "forward-click": {
      "type": "combobox",
      "default": 4,
      "options": {
          "Thumbnail menu toggle": 0,
          "Thumbnail menu hold": 1,
          "Close window": 2,
          "Minimize/Restore": 3,
          "Maximize/Restore": 4,
          "Open new window": 5,
          "Move to workspace 1": 6,
          "Move to workspace 2": 7,
          "Move to workspace 3": 8,
          "Move to workspace 4": 9,
          "Visible on this/all workspaces": 10,
          "Do nothing": 99
      },
  "description": "Forward button action"
  },

  "menu-show-on-hover": {
    "type": "switch",
    "default": true,
    "description": "Show on hover",
    "tooltip": "If enabled, a popup menu with a list of current windows will show when hovering over a launcher button"
  },
  "show-previews": {
    "type": "switch",
    "default": true,
    "description": "Show thumbnails",
    "tooltip": "If enabled, the popup menu will show window thumbnails\n(Always disabled when running Cinnamon in Software Rendering Mode)"
  },
  "number-of-unshrunk-previews": {
    "type": "combobox",
    "default": 7,
    "options": {
      "Extra large": 4,
      "Large": 5,
      "Medium": 7,
      "Small": 9,
      "Extra small": 11
    },
    "description": "Default thumbnail window size"
  },
  "preview-timeout-show": {
    "type": "spinbutton",
    "default": 500,
    "min": 5,
    "max": 10000,
    "units": "milliseconds",
    "step": 1,
    "description": "Hover time before showing menu",
    "dependency": "menu-show-on-hover",
    "tooltip": "The waiting time before the thumbnail menu appears when hovering over a launcher button\n(Not used when moving directly to a different launcher button)"
  },
  "preview-timeout-hide": {
    "type": "spinbutton",
    "default": 500,
    "min": 5,
    "max": 10000,
    "units": "milliseconds",
    "step": 1,
    "description": "Time before closing after pointer leaves the menu",
    "tooltip": "The waiting time for the thumbnail menu to close when leaving a launcher button\n(Not used when moving directly to a different launcher button)"
  },
  "preview-middle-click": {
    "type": "combobox",
    "default": 0,
    "options": {
      "Close thumbnail menu": 0,
      "Close window": 2,
      "Minimize/Restore": 3,
      "Maximize/Restore": 4,
      "Group/Ungroup windows": 5,
      "Open new window": 6,
      "Move to workspace 1": 7,
      "Move to workspace 2": 8,
      "Move to workspace 3": 9,
      "Move to workspace 4": 10,
      "Visible on this/all workspaces": 11,
      "Do nothing": 12
    },
    "description": "Thumbnail window middle button action"
  },
  "preview-back-click": {
    "type": "combobox",
    "default": 3,
    "options": {
      "Close thumbnail menu": 0,
      "Close window": 2,
      "Minimize/Restore": 3,
      "Maximize/Restore": 4,
      "Group/Ungroup windows": 5,
      "Open new window": 6,
      "Move to workspace 1": 7,
      "Move to workspace 2": 8,
      "Move to workspace 3": 9,
      "Move to workspace 4": 10,
      "Visible on this/all workspaces": 11,
      "Do nothing": 12
    },
    "description": "Thumbnail window back button action"
  },
  "preview-forward-click": {
    "type": "combobox",
    "default": 4,
    "options": {
      "Close thumbnail menu": 0,
      "Close window": 2,
      "Minimize/Restore": 3,
      "Maximize/Restore": 4,
      "Group/Ungroup windows": 5,
      "Open new window": 6,
      "Move to workspace 1": 7,
      "Move to workspace 2": 8,
      "Move to workspace 3": 9,
      "Move to workspace 4": 10,
      "Visible on this/all workspaces": 11,
      "Do nothing": 12
    },
    "description": "Thumbnail window forward button action"
  },
  "menu-show-on-click": {
    "type": "switch",
    "default": true,
    "description": "Show thumbnail menu on left click of a launcher button with 2+ windows",
    "tooltip": "If enabled, the thumbnail menu will appear when clicking on a launcher button with 2 or more windows"
  },
  "wheel-adjusts-preview-size": {
    "type": "combobox",
    "default": 1,
    "options": {
       "Off": 0,
       "On (temporary)": 1,
       "On (global default)": 2,
       "On (button default)": 3
    },
    "description": "Adjust the thumbnail window sizes using the scroll-wheel",
    "tooltip": "If enabled, the size of thumbnail windows will respond to the mouse scroll-wheel. The new size can have a temporary effect or persist on a global or per button basis"
  },

  "hotkey-bindings": {
    "type" : "list",
    "description" : "Hotkey binding available for assignment to a window",
    "columns" : [
        {"id": "enabled",     "title": "Enabled",      "type": "boolean", "default": true},
        {"id": "cycle",       "title": "Cycle application windows", "type": "boolean", "default": false},
        {"id": "keyCombo",    "title": "Key sequence", "type": "keybinding"},
        {"id": "description", "title": "Description",  "type": "string"}
    ],
    "tooltip": "Define a list of hotkeys used to bring to the foreground specific windows.",
    "default" : [
            {
                "enabled": true,
                "cycle": true,
                "keyCombo": "<Alt><Super>c::",
                "description": "org.gnome.Calculator.desktop"
            }
    ]
  },
  "hotkey-minimize": {
    "type": "switch",
    "default": true,
    "description": "Minimize window when hotkey target is already in focus",
    "tooltip": "If enabled and application cycling is not enabled or there is only one window for the application, windows will be minimized if the window is already in focus"
  },
  "hotkey-new": {
    "type": "switch",
    "default": true,
    "description": "Open a new window when the application is not running",
    "tooltip": "Start a new window if no window is attached to a hotkey and the hotkey description is an exact match for the application name of a pinned button or a desktop file name"
  },

  "hotkey-help" : {
    "type" : "label",
    "description" : "Hotkeys can be assigned to a window in two ways:\n\n    1. Manual:\tOpen the context menu for a window list button and select \"Assign window to a hotkey\".\n    2. Automatic:\tEnter a \"Description\" string that matches an application name or a desktop file name.\n\t\t\t\tFor example: \"Google Chrome\" or \"firefox.desktop\"\n\nNote: Hotkeys already assigned by other applications will take precedence over any new entries added here. If a hotkey is not working, it's likely because that key combination is already assigned elsewhere.\nIf you remove or rearrange any hotkeys, manual window assignments may need to be reassigned"
  },

  "launcherList": {
      "type": "generic",
      "default": ["firefox.desktop", "org.gnome.Terminal.desktop", "nemo.desktop"]
  }

}
